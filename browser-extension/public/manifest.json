{
  "name": "SynPage",
  "description": "Enter a prompt and receive an on-screen tutorial for how to navigate a complex site like AWS, Azure, or GCP.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.ca/*",
        "https://www.google.ca/*",
        "https://portal.azure.com/*",
        "https://console.cloud.google.com/*",
        "https://www.figma.com/*",
        "https://github.com/*",
        "https://www.canva.com/*",
        "https://waterlooworks.uwaterloo.ca/*",
        "https://domains.google.com/*"
      ],
      "js": [
        "content.js"
      ],
      "all_frames": false,
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "debugger"
  ],
  "optional_permissions": [
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://dev.ufii4.com:8000/*",
    "http://dev.synpage.ca/*"
  ],
  "externally_connectable": {
    "matches": ["http://localhost/*", "https://devlearner.synpage.ca/"]
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ]
}
